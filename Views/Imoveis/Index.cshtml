@model IEnumerable<Adm_Imoveis.Models.Imovel>

@{
    ViewData["Title"] = "Index";
}

<h1>Listagem</h1>

<p>
    <a asp-action="Create">Novo Imovel</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdImovel">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdImovel">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdImovel">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
