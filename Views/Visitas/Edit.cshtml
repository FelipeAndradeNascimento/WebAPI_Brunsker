@model Adm_Imoveis.Models.Visita

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Visita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVisitas" />
            <div class="form-group">
                <label asp-for="idCliente" class="control-label"></label>
                <input asp-for="idCliente" class="form-control" />
                <span asp-validation-for="idCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idCorretor" class="control-label"></label>
                <input asp-for="idCorretor" class="form-control" />
                <span asp-validation-for="idCorretor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idImovel" class="control-label"></label>
                <input asp-for="idImovel" class="form-control" />
                <span asp-validation-for="idImovel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dtVisita" class="control-label"></label>
                <input asp-for="dtVisita" class="form-control" />
                <span asp-validation-for="dtVisita" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
